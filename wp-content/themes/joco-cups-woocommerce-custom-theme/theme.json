{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"palette": [
				{
					"slug": "base",
					"color": "#0b0c0f",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#f3f4f6",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#ff4d24",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#14161b",
					"name": "Secondary"
				},
				{
					"slug": "muted",
					"color": "#9ca3af",
					"name": "Muted"
				}
			]
		},
		"layout": {
			"contentSize": "720px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "48px",
					"fontWeight": "700",
					"lineHeight": "1.05"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "32px",
					"fontWeight": "700",
					"lineHeight": "1.15"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "22px",
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					}
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)"
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"spacing": {
			"blockGap": "24px"
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "16px",
					"lineHeight": "1.7"
				}
			},
			"core/list": {
				"typography": {
					"fontSize": "16px",
					"lineHeight": "1.7"
				},
				"spacing": {
					"padding": {
						"left": "18px"
					}
				}
			},
			"core/quote": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "16px",
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "4px"
					}
				},
				"spacing": {
					"padding": {
						"top": "18px",
						"right": "18px",
						"bottom": "18px",
						"left": "18px"
					}
				},
				"typography": {
					"lineHeight": "1.7"
				}
			},
			"core/pullquote": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "16px"
				},
				"spacing": {
					"padding": {
						"top": "22px",
						"right": "22px",
						"bottom": "22px",
						"left": "22px"
					}
				},
				"typography": {
					"fontStyle": "italic",
					"lineHeight": "1.6"
				}
			},
			"core/verse": {
				"typography": {
					"lineHeight": "1.7"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "12px"
				},
				"spacing": {
					"padding": {
						"top": "14px",
						"right": "14px",
						"bottom": "14px",
						"left": "14px"
					}
				},
				"typography": {
					"fontSize": "14px",
					"fontFamily": "ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,\"Liberation Mono\",\"Courier New\",monospace",
					"lineHeight": "1.6"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "12px"
				},
				"spacing": {
					"padding": {
						"top": "14px",
						"right": "14px",
						"bottom": "14px",
						"left": "14px"
					}
				},
				"typography": {
					"fontSize": "14px",
					"fontFamily": "ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,\"Liberation Mono\",\"Courier New\",monospace",
					"lineHeight": "1.6"
				}
			},
			"core/details": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "16px"
				},
				"spacing": {
					"padding": {
						"top": "18px",
						"right": "18px",
						"bottom": "18px",
						"left": "18px"
					}
				}
			},
			"core/table": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"border": {
					"radius": "14px",
					"color": "rgba(255,255,255,0.12)",
					"style": "solid",
					"width": "1px"
				},
				"spacing": {
					"padding": {
						"top": "12px",
						"right": "12px",
						"bottom": "12px",
						"left": "12px"
					}
				},
				"typography": {
					"fontSize": "14px",
					"lineHeight": "1.6"
				}
			},
			"core/freeform": {
				"typography": {
					"fontSize": "16px",
					"lineHeight": "1.7"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "#000000"
				},
				"border": {
					"radius": "999px"
				},
				"typography": {
					"fontWeight": "600"
				},
				"spacing": {
					"padding": {
						"top": "10px",
						"bottom": "10px",
						"left": "18px",
						"right": "18px"
					}
				}
			}
		}
	}
}
